#!/usr/bin/with-contenv sh

success(){
    echo "0" > /tmp/grav    
}


fail(){
    echo "1" > /tmp/grav    
}


[ -d /var/www/grav/ ] || mkdir -p /var/www/grav

if [ -z "$(ls -A "/var/www/grav")" ];
then
    GRAV_VERSION=$( curl -s https://api.github.com/repos/getgrav/grav/releases/latest | grep "tag_name" | cut -d "\"" -f4 )
    wget https://getgrav.org/download/core/grav-admin/${GRAV_VERSION} -O /tmp/${GRAV_VERSION}.zip || fail
    unzip /tmp/${GRAV_VERSION}.zip -d /var/www/ || fail
    mv /var/www/grav-admin/* /var/www/grav/
    mv /var/www/grav-admin/.* /var/www/grav/
    rm /var/www/grav-admin/ -R
    rm /tmp/${GRAV_VERSION}.zip

    chown nginx:nginx /var/www/grav -R
    success
fi
success